<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="detailsVM" type="com.glosary.app.modules.details.data.viewmodel.DetailsVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearGroup712"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:gravity="start"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearGroup686"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <FrameLayout android:gravity="start"
                    android:id="@+id/frameGroup695"
                    android:layout_height="@dimen/_262pxv" android:layout_width="match_parent">
                    <View
                        android:background="@drawable/rectangle_bg_green_500_radius_bl_30_br_30"
                        android:id="@+id/viewBackground"
                        android:layout_gravity="top|start"
                        android:layout_height="@dimen/_185pxv"
                        android:layout_marginBottom="@dimen/_10pxv" android:layout_width="@dimen/_428pxh"/>
                    <ImageView android:id="@+id/imageImage"
                        android:layout_gravity="bottom|center"
                        android:layout_height="@dimen/_219pxh"
                        android:layout_marginEnd="@dimen/_94pxh"
                        android:layout_marginStart="@dimen/_94pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="@dimen/_240pxh"
                        android:scaleType="fitXY"
                        imageRes="@{@drawable/img_image_47}" tools:src="@drawable/img_image_47"/>
                </FrameLayout>
                <ImageView android:id="@+id/imageSwipe"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_5pxh"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="@dimen/_33pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_swipe"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearGroup674"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <LinearLayout android:id="@+id/linearFrame"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtGreenApple"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@{detailsVM.detailsModel.txtGreenApple}"
                            style="@style/txtMontserratbold28" tools:text="@string/lbl_green_apple"/>
                        <LinearLayout android:id="@+id/linearFrame1"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2pxv"
                            android:layout_marginStart="@dimen/_113pxh"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_weight="0.35"
                            android:layout_width="0dp" android:orientation="horizontal">
                            <ImageView android:id="@+id/imageIcon"
                                android:layout_height="@dimen/_30pxh"
                                android:layout_width="@dimen/_30pxh"
                                android:scaleType="fitXY" android:src="@drawable/img_icon_2"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txt1"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_15pxh"
                                android:layout_weight="0.14"
                                android:layout_width="0dp"
                                android:singleLine="true"
                                android:text="@{detailsVM.detailsModel.txt1}"
                                style="@style/txtMontserratsemibold24" tools:text="@string/lbl_1"/>
                            <ImageView android:id="@+id/imageIcon1"
                                android:layout_height="@dimen/_30pxh"
                                android:layout_marginStart="@dimen/_15pxh"
                                android:layout_width="@dimen/_30pxh"
                                android:scaleType="fitXY" android:src="@drawable/img_icon_3"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSpecialPrice"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{detailsVM.detailsModel.txtSpecialPrice}"
                        style="@style/txtMontserratregular22" tools:text="@string/lbl_special_price"/>
                    <LinearLayout android:id="@+id/linearGroup673"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txt2"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_weight="0.28"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@{detailsVM.detailsModel.txt2}"
                            style="@style/txtHelveticabold34" tools:text="@string/lbl_2"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txt42Off"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2pxv"
                            android:layout_marginEnd="@dimen/_16pxh"
                            android:layout_marginStart="@dimen/_259pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_weight="0.72"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@{detailsVM.detailsModel.txt42Off}"
                            style="@style/txtMontserratsemibold22" tools:text="@string/lbl_42_off"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearFrame2"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtDescription"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{detailsVM.detailsModel.txtDescription}"
                        style="@style/txtMontserratbold22" tools:text="@string/lbl_description"/>
                    <TextView android:id="@+id/txtGreenApplesHa"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9pxv"
                        android:layout_width="match_parent"
                        android:text="@{detailsVM.detailsModel.txtGreenApplesHa}"
                        style="@style/txtMontserratregular16" tools:text="@string/msg_green_apples_ha"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical"
                    android:id="@+id/linearFrame3"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_31pxv"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnSubscribe"
                        android:layout_height="@dimen/_36pxv"
                        android:layout_width="@dimen/_106pxh"
                        android:paddingBottom="@dimen/_8pxv"
                        android:paddingEnd="@dimen/_12pxh"
                        android:paddingStart="@dimen/_12pxh"
                        android:paddingTop="@dimen/_8pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_subscribe"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded_5" tools:text="@string/lbl_subscribe"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnBuyOnce"
                        android:layout_height="@dimen/_36pxv"
                        android:layout_marginStart="@dimen/_21pxh"
                        android:layout_width="@dimen/_106pxh"
                        android:paddingBottom="@dimen/_8pxv"
                        android:paddingEnd="@dimen/_12pxh"
                        android:paddingStart="@dimen/_13pxh"
                        android:paddingTop="@dimen/_8pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_buy_once"
                        android:textAllCaps="false"
                        style="@style/btnRoundedOutline_2" tools:text="@string/lbl_buy_once"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRelatedItems"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{detailsVM.detailsModel.txtRelatedItems}"
                    style="@style/txtMontserratbold22" tools:text="@string/lbl_related_items"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center_horizontal"
                    android:id="@+id/recyclerDetails"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_24pxv"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    itemSpace="@{@dimen/_16pxh}" tools:itemCount="3" tools:listitem="@layout/row_details1"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
