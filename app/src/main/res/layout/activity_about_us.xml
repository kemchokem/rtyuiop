                            android:gravity="center_horizontal"
                            android:id="@+id/linearGroup378"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" android:orientation="vertical">
                            <TextView android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:id="@+id/txtWhyChooseUs"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_57pxh"
                                android:layout_marginStart="@dimen/_57pxh"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:text="@{aboutUsVM.aboutUsModel.txtWhyChooseUs}"
                                style="@style/txtMontserratsemibold22" tools:text="@string/msg_why_choose_us"/>
                            <TextView
                                android:gravity="center_horizontal"
                                android:id="@+id/txtWeDoNotBuyF"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_57pxh"
                                android:layout_marginStart="@dimen/_57pxh"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_width="match_parent"
                                android:text="@{aboutUsVM.aboutUsModel.txtWeDoNotBuyF}"
                                style="@style/txtMontserratsemibold18_1" tools:text="@string/msg_we_do_not_buy_f"/>
                            <TextView android:gravity="start"
                                android:id="@+id/txtWeWouldLikeT"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_width="match_parent"
                                android:text="@{aboutUsVM.aboutUsModel.txtWeWouldLikeT}"
                                style="@style/txtMontserratregular14_9" tools:text="@string/msg_we_would_like_t"/>
