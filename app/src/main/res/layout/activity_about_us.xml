                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <ImageView android:id="@+id/imageImage1"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="@dimen/_172pxh"
                            android:layout_marginEnd="@dimen/_99pxh"
                            android:layout_marginStart="@dimen/_99pxh"
                            android:layout_width="@dimen/_198pxh"
                            android:scaleType="fitXY"
                            imageRes="@{@drawable/img_image_10}" tools:src="@drawable/img_image_10"/>
