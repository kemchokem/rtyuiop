<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="userVM" type="com.glosary.app.modules.user.data.viewmodel.UserVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearUser"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <TextView android:ellipsize="end" android:id="@+id/txtProfile"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{userVM.userModel.txtProfile}"
            style="@style/txtMontserratbold22" tools:text="@string/lbl_profile"/>
        <ImageView android:id="@+id/imageImage"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_79pxh"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="@dimen/_79pxh"
            android:scaleType="fitXY" circular="@{true}"
            imageRes="@{@drawable/img_image_3}" tools:src="@drawable/img_image_3"/>
        <LinearLayout android:id="@+id/linearFrame"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_24pxv"
            android:layout_width="wrap_content" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearFrame1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtGeorgeD"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.83"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{userVM.userModel.txtGeorgeD}"
                    style="@style/txtMontserratregular20" tools:text="@string/lbl_george_d"/>
                <ImageView android:id="@+id/imageFrame"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_frame_3"/>
            </LinearLayout>
            <TextView android:ellipsize="end" android:gravity="start"
                android:id="@+id/txtgeorge31"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_18pxh"
                android:layout_marginStart="@dimen/_18pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{userVM.userModel.txtgeorge31}"
                style="@style/txtMontserratregular14_2" tools:text="@string/lbl_george31"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/frameGroup268"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_629pxv"
            android:layout_marginBottom="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_24pxv"
            android:layout_width="@dimen/_396pxh" style="@style/groupStylegray_101cornerRadius">
            <FrameLayout android:id="@+id/frameGroup270"
                android:layout_gravity="start"
                android:layout_height="@dimen/_580pxv"
                android:layout_marginBottom="@dimen/_24pxv"
                android:layout_marginTop="@dimen/_24pxv" android:layout_width="@dimen/_396pxh">
                <EditText android:drawablePadding="@dimen/_10pxh"
                    android:drawableStart="@drawable/img_frame_4"
                    android:ellipsize="end"
                    android:hint="@string/lbl_my_orders"
                    android:id="@+id/etMyOrders"
                    android:layout_gravity="top|start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_18pxv"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@={userVM.userModel.etMyOrdersValue}"
                    android:textColorHint="@color/gray_601" style="@style/etMontserratregular18"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFrame"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    itemSpace="@{@dimen/_38pxh}" tools:itemCount="4" tools:listitem="@layout/row_user1"/>
            </FrameLayout>
            <LinearLayout android:id="@+id/linearGroup271"
                android:layout_gravity="top|start"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_86pxv"
                android:layout_marginTop="@dimen/_86pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearGroup263"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <EditText android:drawablePadding="@dimen/_10pxh"
                        android:drawableStart="@drawable/img_frame_8"
                        android:ellipsize="end"
                        android:hint="@string/msg_my_subscription"
                        android:id="@+id/etMySubscription"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_24pxh"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@={userVM.userModel.etMySubscriptionValue}"
                        android:textColorHint="@color/gray_602" style="@style/etMontserratregular18_1"/>
                    <EditText android:drawablePadding="@dimen/_10pxh"
                        android:drawableStart="@drawable/img_frame_9"
                        android:ellipsize="end"
                        android:hint="@string/lbl_my_addresses"
                        android:id="@+id/etMyAddresses"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_23pxv"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_14pxv"
                        android:paddingStart="@dimen/_24pxh"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@={userVM.userModel.etMyAddressesValue}"
                        android:textColorHint="@color/gray_602" style="@style/etMontserratregular18_1"/>
                </LinearLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearGroup264"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25pxv"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <EditText android:drawablePadding="@dimen/_10pxh"
                        android:drawableStart="@drawable/img_frame_10"
                        android:ellipsize="end"
                        android:hint="@string/lbl_my_wallet"
                        android:id="@+id/etMyWallet"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_12pxv"
                        android:paddingStart="@dimen/_24pxh"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@={userVM.userModel.etMyWalletValue}"
                        android:textColorHint="@color/gray_602" style="@style/etMontserratregular18_1"/>
                    <EditText android:drawableEnd="@drawable/img_icon_5"
                        android:drawablePadding="@dimen/_10pxh"
                        android:drawableStart="@drawable/img_frame_11"
                        android:ellipsize="end"
                        android:hint="@string/lbl_notifications"
                        android:id="@+id/etNotifications"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_23pxv"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_10pxv"
                        android:paddingEnd="@dimen/_16pxh"
                        android:paddingStart="@dimen/_24pxh"
                        android:paddingTop="@dimen/_5pxv"
                        android:singleLine="true"
                        android:text="@={userVM.userModel.etNotificationsValue}"
                        android:textColorHint="@color/gray_602" style="@style/etMontserratregular18_1"/>
                </LinearLayout>
                <EditText android:drawablePadding="@dimen/_10pxh"
                    android:drawableStart="@drawable/img_frame_12"
                    android:ellipsize="end"
                    android:hint="@string/lbl_settings"
                    android:id="@+id/etSettings"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_29pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_8pxv"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@={userVM.userModel.etSettingsValue}"
                    android:textColorHint="@color/gray_602" style="@style/etMontserratregular18_1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
